{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Poverty Rate agaist Crime Rate by US State",
    "subtitle": [
      "Scatter of Crime Rate per 100,000 people against Poverty Rate, Bubble size represents State Population", "Source: FBI, US Census Bureau"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "height": 300,
  "width": 380,
  "config": {"background": "white", "view": {"stroke": "transparent"}},
  "data": {
    "url": "https://raw.githubusercontent.com/JosephOReilly21/JosephOReilly21.github.io/main/project/povertydata.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {"type": "circle", "color": "orange", "opacity": 0.7},
      "encoding": {
        "x": {
          "field": "% Poverty Rate",
          "type": "quantitative",
          "scale":{"domain":[5,20]},
          "title": "Poverty Rate %",
          "axis":{"grid": false}
          
        },
        "y": {
          "field": "Crime Rate 2020",
          "type": "quantitative",
          "scale":{"domain":[2000,8000]},
          "title": "Crime Rate",
          "axis":{"grid": false}
        },
        "size": {
          "field": "Population",
          "type": "quantitative",
          "legend": null
        },
        "tooltip": [
          {"field": "State", "type": "ordinal", "title": "State"},
          {
            "field": "Crime Rate 2020",
            "type": "quantitative",
            "title": "Crime Rate per 100,000",
            "format": ".0f"
          },
          {
            "field": "% Poverty Rate",
            "type": "quantitative",
            "title": "Poverty Rate %",
            "format": ".2f"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "title": "Population",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "red"},
      "transform": [
        {
          "regression": "Crime Rate 2020",
          "on": "% Poverty Rate",
          "extent": [5,18]
        }
      ],
      "encoding": {
        "x": {
          "field": "% Poverty Rate",
         
          "type": "quantitative"
        },
        "y": {"field": "Crime Rate 2020", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {
          "regression": "Crime Rate 2020",
          "on": "% Poverty Rate",
          "params": true,
          "extent": [5,20]
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "red",
        "x": "width",
        "align": "right",
        "y": -4
      },
      "encoding": {"text": {"type": "ordinal", "field": "R2"}}
    }
  ]
}
