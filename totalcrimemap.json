{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "width": 450,
  "height": 300,
  
  "view": {"stroke": "transparent"},

  "title": {
      "text": "Total Crime",
      "fontSize": 12,
      "subtitle":["United States, 1979-2020, Source: FBI (Summary Reporting System) "],
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10, "anchor": "middle"},
      

  "params": [    
  {"name":"yearSelector", "value":1979,
     "bind":{
       "input": "range",
       "min": 1979, 
       "max": 2020, 
       "step": 1,
       "name": "Select a Year:"}}],    

  "projection": {"type": "albersUsa"},
    "mark": {"type": "geoshape", "stroke": "grey", "strokeWidth": 0.2},
  
  "data": {
      "url":"https://raw.githubusercontent.com/JosephOReilly21/JosephOReilly21.github.io/main/project/crimemapclean.csv",
      "format": {"type": "csv"}},
  
  "transform": [
    {"calculate": "toNumber(yearSelector)", "as": "yearS"},
    {"filter":"datum.yearS == datum.year"},

    {"fold":["California",
              "Florida",
              "Alaska",
              "Arizona",
              "New York",
              "Texas",
              "Alabama",
              "North Carolina",
              "Illinois",
              "Utah",
              "Nevada",
              "Kentucky",
              "District of Columbia",
              "Wisconsin",
              "Connecticut",
              "Pennsylvania",
              "Colorado",
              "Missouri",
              "Arizona",
              "Washington",
              "Louisiana",
              "Georgia",
              "New Mexico",
              "Virginia",
              "New Jersey",
              "South Carolina",
              "Oregon",
              "Idaho",
              "Ohio",
              "Tennessee",
              "Nebraska",
              "Oklahoma",
              "Indiana",
              "Arkansas",
              "Michigan",
              "Massachusetts",
              "Hawaii",
              "Montana",
              "Mississippi",
              "New Hampshire",
              "Maryland",
              "Delaware",
              "Vermont",
              "Minnesota",
              "Kansas",
              "South Dakota",
              "Maine",
              "West Virginia",
              "Wyoming",
              "Iowa",
              "Rhode Island",
              "North Dakota"], 
      "as": ["State", "Value"]},
   
   {"lookup": "State",
          "from": {
              "data": {
                  "url": "https://raw.githubusercontent.com/JosephOReilly21/JosephOReilly21.github.io/main/USgeomap.json",
                  "format":{"property":"features"}},
          "key": "properties.NAME",
              "fields": [       
                  "properties",
                  "type",
                  "geometry"]}}],
    
  "encoding":{
        "color":{
          "field":"Value",
          "legend":{
              "title":null,
              "orient": "right",
              "direction": "vertical"},
          "type": "quantitative",
          "scale":{"scheme":"oranges"}},
              "tooltip": [
    {
      "field": "properties.NAME",
      "type": "nominal",
      "title": "State"
    },
    {"field": "Value", "title": "Total Crimes"}

  ]

  }
  }




